{
  "private": true,
  "scripts": {
    "build": "pnpm run --r --filter \"./packages/**\" build",
    "clean": "pnpm run --r --parallel clean",
    "dev": "pnpm dev:vite-vue",
    "dev:vite-vue": "pnpm --filter vite-vue dev",
    "format": "rome format . --write",
    "lint": "rome check .",
    "lint:fix": "pnpm lint --apply",
    "lint:unused": "pnpm clean && knip"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.5.4",
    "fs-extra": "^11.1.1",
    "knip": "^2.19.11",
    "rome": "^12.1.3",
    "simple-git-hooks": "^2.9.0",
    "typescript": "5.0.4",
    "viem": "0.0.0-w-20230822145918"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint:fix"
  },
  "packageManager": "pnpm@8.6.12",
  "pnpm": {
    "overrides": {
      "viem": "0.0.0-w-20230822145918"
    }
  },
  "knip": {
    "ignore": ["**/*.test-d.ts", "**/vite-env.d.ts", "vitest.workspace.ts"],
    "ignoreDependencies": ["only-allow"],
    "ignoreWorkspaces": ["docs", "packages/register-tests/**"],
    "workspaces": {
      "packages/vue": {
        "entry": "src/{actions,chains,connectors,index,query}.ts!"
      }
    }
  }
}
